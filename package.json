{
    "name": "phonocorrect-ai",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "packageManager": "pnpm@9.0.0",
    "scripts": {
        "build": "pnpm run build:common && pnpm run build:ml-core && pnpm run --parallel build:apps",
        "build:common": "pnpm --filter common build",
        "build:ml-core": "pnpm --filter ml-core build",
        "build:apps": "pnpm --filter desktop build && pnpm --filter web build && pnpm --filter chrome-ext build",
        "dev": "pnpm --parallel dev",
        "dev:common": "pnpm --filter common dev",
        "dev:desktop": "pnpm --filter desktop dev",
        "dev:web": "pnpm --filter web dev",
        "dev:mobile": "pnpm --filter mobile dev",
        "dev:chrome": "pnpm --filter chrome-ext dev",
        "lint": "pnpm --recursive lint",
        "test": "pnpm --recursive test",
        "type-check": "pnpm --recursive type-check",
        "clean": "pnpm --recursive clean && rm -rf node_modules",
        "fresh": "pnpm clean && pnpm install",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "fetch-models": "pnpm --filter ml-core fetch-models",
        "fetch-models:all": "pnpm --filter ml-core fetch-models -- --all",
        "electron-dist": "pnpm --filter desktop dist",
        "mobile:android": "pnpm --filter mobile android",
        "mobile:ios": "pnpm --filter mobile ios",
        "mobile:build:android": "pnpm --filter mobile build:android",
        "mobile:build:ios": "pnpm --filter mobile build:ios"
    },
    "dependencies": {},
    "devDependencies": {
        "@eslint/js": "^9.21.0",
        "@types/node": "^22.0.0",
        "eslint": "^9.28.0",
        "globals": "^16.0.0",
        "prettier": "^3.0.0",
        "typescript": "~5.7.2",
        "typescript-eslint": "^8.25.0"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=9.0.0"
    }
}
